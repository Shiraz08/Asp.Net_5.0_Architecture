@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = "~/Views/Shared/_IdentityLayout.cshtml";
}

<div class="card-body">
    <p class="login-box-msg">Use a local account to log in.</p>
    <form id="account" method="post">
        <div class="input-group mb-3">
            <input asp-for="Input.Email" class="form-control" placeholder="Enter Email..!" /><br />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-envelope"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
            <input asp-for="Input.Password" class="form-control" placeholder="Enter Password..!" /><br />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <div class="input-group-append">
                <div class="input-group-text">
                    <span class="fas fa-lock"></span>
                </div>
            </div>
        </div>
        <div class="input-group mb-3">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Log in</button>
            </div>
            <!-- /.col -->
        </div>
    </form>

    <p class="mt-3 mb-1">
        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
    </p>
    <p class="mt-3 mb-1">
        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
    </p>
    <p class="mt-3 mb-1">
        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
    </p>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
